    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Debug script",
            "type": "node",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--env-file",
                "--allow-env=SESSION_COOKIES",
                "--allow-net=adventofcode.com"
            ],
            "attachSimplePort": 9229
        }
    ]
}
